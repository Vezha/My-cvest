	string path = "file1";
	ofstream fout;
	fout.open(path);
	if (!fout.is_open())
	{
		cout << "ошибка открытия файла!" << endl;
	}
	else
	{
		fout << "хоть 8 будет?" << endl;
	}
	ifstream fin;
	fin.open(path);
	if (!fin.is_open())
	{
		cout << "ошибка открытия файла!" << endl;
	}
	else
	{
		cout << "файл открыт!" << endl;
		char ch;
		while (fin.get(ch))
		{
			cout << ch;
		}
	}
}
 
