class persone {
public:
	persone()
	{
		string im;
		string age;
		string mesto;
		cout << "привет,для прохождения моего квеста нужно твои данные: " << endl;
		cout << "введи свое имя, твой возраст, место жительства (НА АНГЛИЙСКОМ): " << endl;
		cin >> im;
		cin >> age;
		cin >> mesto;
		cout << "ваши данные: вас зовут: " << im << "\n ваш возраст: " << age << "\n ваш адрес: " << mesto << endl;
	}
};
